  "scripts": {
    "setup": "npm install && cd client && npm install",
    "client": "cd client && npm start",
    "server": "cd server && nodemon server",
    "start": "concurrently \"npm run server\" \"npm run client\" ",
    "build": "cd client && npm run build",
    "test": "export NODE_CONFIG_DIR=./server/config && nyc --reporter=html --reporter=text mocha server/src/**/* --exit",
    "test-vuln": "snyk test",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "lint": "standard | snazzy",
    "lint-fix": "standard --fix | snazzy"
  },
  "standard": {
    "globals": [
      "URL",
      "fetch",
      "describe",
      "context",
      "before",
      "beforeEach",
      "after",
      "afterEach",
      "it",
      "expect"
    ]
  },
  "private": true,
  "dependencies": {
    "argon2": "^0.16.2",
    "body-parser": "^1.18.2",
    "config": "^1.29.1",
    "express": "^4.16.2",
    "express-bearer-token": "^2.1.1",
    "helmet": "^3.9.0",
    "jsonwebtoken": "^8.1.0",
    "lodash": "^4.17.4",
    "mongodb": "^3.0.1",
    "mongoose": "^5.0.0-rc0",
    "validator": "^9.2.0"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "concurrently": "^3.5.1",
    "coveralls": "^3.0.0",
    "istanbul": "^0.4.5",
    "mocha": "^4.1.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^1.14.7",
    "nyc": "^11.4.1",
    "sinon": "^4.1.3",
    "snazzy": "^7.0.0",
    "snyk": "^1.65.0",
    "standard": "^10.0.3",
    "supertest": "^3.0.0"
  }
}
